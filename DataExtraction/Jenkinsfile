pipeline {
    agent any

    stages {
        stage('Build') {
            agent {
                docker {
                    image 'python:3.12.1-slim'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    ls -la
                    python --version
                    pip3 install --no-cache-dir -r requirements.txt
                    flask --version
                '''
            }
        }
    }
}