pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                git url: 'https://github.com/Krypton3/PyMaterials.git', branch: 'main'
            }
        }
        stage('Copy Folder') {
            steps {
                sh '''
                    sh 'mkdir -p $WORKSPACE/app && cp -r DataExtraction/* $WORKSPACE/app'
                '''
            }
        }
        stage('Build') {
            agent {
                docker {
                    image 'python:3.12.1-slim'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    ls -la
                    python --version
                    pip3 install --no-cache-dir -r requirements.txt
                    flask --version
                '''
            }
        }
    }
}